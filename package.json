{
  "name": "markdown2conf",
  "version": "1.4.13-rc.2",
  "type": "module",
  "description": "Convert Markdown files to Confluence Wiki Markup and publish to Confluence with CLI",
  "main": "index.js",
  "scripts": {
    "dev": "tsx index.ts",
    "test": "vitest run --silent",
    "build": "tsc -b",
    "fmtcheck": "prettier **/*.{js,ts} --check",
    "lint": "eslint"
  },
  "bin": {
    "mdconf": "./dist/index.js"
  },
  "keywords": [
    "Confluence",
    "Markdown",
    "CLI"
  ],
  "files": [
    "dist/"
  ],
  "author": "iucario",
  "homepage": "https://github.com/iucario/markdown2conf",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "commander": "^14.0.2",
    "front-matter": "^4.0.2",
    "marked": "^16.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": ">=7.1.11",
    "vitest": "^3.2.4"
  }
}
